{{#each posts as |post| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <a href="/post/{{post.id}}">{{post.post_title}}</a>
        </h2>
        <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div>
        <p>
            {{post.description}}
        </p>
    </div>
</div>

<p class="custom-hidden" id="{{post.id}}">{{post.id}}</p>
{{/each}}

<div>
    <div>
        <h2>New Post</h2>
    </div>
    <div>
        <form>
            <label>Topic</label>
            <input type="text" id="topic-dashboard" required>
            <label>Message</label>
            <input type="text" id="message-dashboard" required>
            <button id="dashboard-form">Submit</button>
        </form>
    </div>
</div>

<script src="/public/js/dashboard.js"></script> 